<div class="container">
    <div class="row">
            <div class="jumbotron">
                <h1 id="title"> WELCOME TO BURGER SHACK! </h1>
                <img src="./assets/img/burger.png" alt="Burger Image">
            </div>
    </div>

    <div class="row">
        <div class="col-md-6" id="notDevoured">
            <h2 id="eat"> Which Burger Would You Like to Eat? </h2>

            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}

                    <br>

                    <button data-id="{{this.id}}" type="submit" class="btn btn-success devour"> DEVOUR THIS BURGER!</button>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-md-6" id="devoured">
            <h2 id="alreadyEaten"> Burgers Have Already Been Eaten: </h2>

            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">

        <div class="col-md-12">
            <div class="form-group">
                <form class="create-form">
                    <textarea name="burgerName" id="burger_name"></textarea>
                    <br/>
                    <button type="submit" class="btn btn-success" id="add-burger"> ADD THIS BURGER </button>
                </form>
                <p> Please Enter The Burger You Would Like to Eat and Click "ADD THIS BURGER" Button Below </p>
            </div>
        </div>

    </div>

</div>