<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1> Welcome to Burger Shack! </h1>
                <img src="./assets/img/burger.png" alt="Burger Image">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5" id="notDevoured">
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
            
                        <button data-id="{{this.id}}" type="submit" class="btn btn-success devour"> DEVOUR THIS BURGER!</button>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-5" id="devoured">
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6">
            <div class="form-group">
                <form class="create-form">
                    <textarea name="burgerName" id="burger_name"></textarea>
                    <button type="submit" class="btn btn-success"> ADD THIS BURGER </button>
                </form>
                <p> Please Enter The Burger You Would Like to Eat and Click "ADD THIS BURGER" Button Below </p>
            </div>
        </div>

        <div class="col-md-3"></div>
    </div>

</div>